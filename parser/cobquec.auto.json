{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://liri.linguistik.uzh.ch/cobquec5.schema.json",
    "title": "Constraint-based Query Configuration",
    "description": "A linguistic query for LCP data Representation",
    "type": "object",
    "$defs": {
        "query": {
            "properties": {
                "sequence": {
                    "type": "object",
                    "$ref": "#/$defs/sequence"
                },
                "set": {
                    "type": "object",
                    "$ref": "#/$defs/set"
                },
                "group": {
                    "type": "object",
                    "$ref": "#/$defs/group"
                },
                "universalQuantification": {
                    "type": "object",
                    "$ref": "#/$defs/universal_quantification"
                },
                "existentialQuantification": {
                    "type": "object",
                    "$ref": "#/$defs/existential_quantification"
                },
                "logicalOpUnary": {
                    "type": "object",
                    "$ref": "#/$defs/logical_op_unary"
                },
                "logicalOpBinary": {
                    "type": "object",
                    "$ref": "#/$defs/logical_op_binary"
                },
                "logicalOpNAry": {
                    "type": "object",
                    "$ref": "#/$defs/logical_op_n_ary"
                },
                "unit": {
                    "type": "object",
                    "$ref": "#/$defs/unit"
                },
                "cqp": {
                    "type": "object",
                    "$ref": "#/$defs/cqp"
                },
                "reference": {
                    "type": "string",
                    "$ref": "#/$defs/reference"
                }
            },
            "oneOf": [
                {
                    "required": [
                        "sequence"
                    ]
                },
                {
                    "required": [
                        "set"
                    ]
                },
                {
                    "required": [
                        "group"
                    ]
                },
                {
                    "required": [
                        "universalQuantification"
                    ]
                },
                {
                    "required": [
                        "existentialQuantification"
                    ]
                },
                {
                    "required": [
                        "logicalOpUnary"
                    ]
                },
                {
                    "required": [
                        "logicalOpBinary"
                    ]
                },
                {
                    "required": [
                        "logicalOpNAry"
                    ]
                },
                {
                    "required": [
                        "unit"
                    ]
                },
                {
                    "required": [
                        "cqp"
                    ]
                },
                {
                    "required": [
                        "reference"
                    ]
                }
            ]
        },
        "sequence": {
            "properties": {
                "partOf": {
                    "type": "string",
                    "$ref": "#/$defs/part_of"
                },
                "label": {
                    "type": "string",
                    "$ref": "#/$defs/label"
                },
                "repetition": {
                    "type": "string",
                    "$ref": "#/$defs/repetition"
                },
                "members": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/members"
                    },
                    "minItems": 1
                }
            }
        },
        "statement__": {
            "properties": {
                "sequence": {
                    "type": "object",
                    "$ref": "#/$defs/sequence"
                },
                "set": {
                    "type": "object",
                    "$ref": "#/$defs/set"
                },
                "group": {
                    "type": "object",
                    "$ref": "#/$defs/group"
                },
                "universalQuantification": {
                    "type": "object",
                    "$ref": "#/$defs/universal_quantification"
                },
                "existentialQuantification": {
                    "type": "object",
                    "$ref": "#/$defs/existential_quantification"
                },
                "logicalOpUnary": {
                    "type": "object",
                    "$ref": "#/$defs/logical_op_unary"
                },
                "logicalOpBinary": {
                    "type": "object",
                    "$ref": "#/$defs/logical_op_binary"
                },
                "logicalOpNAry": {
                    "type": "object",
                    "$ref": "#/$defs/logical_op_n_ary"
                },
                "unit": {
                    "type": "object",
                    "$ref": "#/$defs/unit"
                },
                "cqp": {
                    "type": "object",
                    "$ref": "#/$defs/cqp"
                },
                "reference": {
                    "type": "string",
                    "$ref": "#/$defs/reference"
                }
            },
            "oneOf": [
                {
                    "required": [
                        "sequence"
                    ]
                },
                {
                    "required": [
                        "set"
                    ]
                },
                {
                    "required": [
                        "group"
                    ]
                },
                {
                    "required": [
                        "universalQuantification"
                    ]
                },
                {
                    "required": [
                        "existentialQuantification"
                    ]
                },
                {
                    "required": [
                        "logicalOpUnary"
                    ]
                },
                {
                    "required": [
                        "logicalOpBinary"
                    ]
                },
                {
                    "required": [
                        "logicalOpNAry"
                    ]
                },
                {
                    "required": [
                        "unit"
                    ]
                },
                {
                    "required": [
                        "cqp"
                    ]
                },
                {
                    "required": [
                        "reference"
                    ]
                }
            ]
        },
        "set": {
            "properties": {
                "label": {
                    "type": "string",
                    "$ref": "#/$defs/label"
                },
                "members": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/members"
                    },
                    "minItems": 1
                }
            }
        },
        "group": {
            "properties": {
                "label": {
                    "type": "string",
                    "$ref": "#/$defs/label"
                },
                "members": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/members"
                    },
                    "minItems": 1
                }
            }
        },
        "universal_quantification": {
            "properties": {
                "quantor": {
                    "type": "string",
                    "$ref": "#/$defs/quantor__universal"
                },
                "args": {
                    "type": "array",
                    "$ref": "#/$defs/args__q_two"
                }
            },
            "required": [
                "quantor",
                "args"
            ]
        },
        "existential_quantification": {
            "properties": {
                "quantor": {
                    "type": "string",
                    "$ref": "#/$defs/quantor__existential"
                },
                "args": {
                    "type": "array",
                    "$ref": "#/$defs/args__q_one"
                }
            },
            "required": [
                "quantor",
                "args"
            ]
        },
        "logical_op_unary": {
            "properties": {
                "operator": {
                    "type": "string",
                    "$ref": "#/$defs/operator__unary"
                },
                "args": {
                    "type": "array",
                    "$ref": "#/$defs/args__one"
                }
            },
            "required": [
                "operator",
                "args"
            ]
        },
        "logical_op_binary": {
            "properties": {
                "operator": {
                    "type": "string",
                    "$ref": "#/$defs/operator__binary"
                },
                "args": {
                    "type": "array",
                    "$ref": "#/$defs/args__two"
                }
            },
            "required": [
                "operator",
                "args"
            ]
        },
        "logical_op_n_ary": {
            "properties": {
                "operator": {
                    "type": "string",
                    "$ref": "#/$defs/operator__n_ary"
                },
                "args": {
                    "type": "array",
                    "$ref": "#/$defs/args__any"
                }
            },
            "required": [
                "operator",
                "args"
            ]
        },
        "unit": {
            "properties": {
                "layer": {
                    "type": "string",
                    "$ref": "#/$defs/layer"
                },
                "partition": {
                    "type": "string",
                    "$ref": "#/$defs/partition"
                },
                "partOf": {
                    "type": "string",
                    "$ref": "#/$defs/part_of"
                },
                "label": {
                    "type": "string",
                    "$ref": "#/$defs/label"
                },
                "constraints": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/constraints"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "layer"
            ]
        },
        "cqp": {
            "properties": {
                "label": {
                    "type": "string",
                    "$ref": "#/$defs/label"
                },
                "partOf": {
                    "type": "string",
                    "$ref": "#/$defs/part_of"
                },
                "cqp": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/cqp__"
                    },
                    "minItems": 1
                }
            }
        },
        "reference": {
            "type": "string",
            "pattern": "[a-z][a-zA-Z0-9_]*"
        },
        "cqp__": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/cqp__"
            },
            "minItems": 1
        },
        "members": {
            "properties": {
                "sequence": {
                    "type": "object",
                    "$ref": "#/$defs/sequence"
                },
                "set": {
                    "type": "object",
                    "$ref": "#/$defs/set"
                },
                "group": {
                    "type": "object",
                    "$ref": "#/$defs/group"
                },
                "universalQuantification": {
                    "type": "object",
                    "$ref": "#/$defs/universal_quantification"
                },
                "existentialQuantification": {
                    "type": "object",
                    "$ref": "#/$defs/existential_quantification"
                },
                "logicalOpUnary": {
                    "type": "object",
                    "$ref": "#/$defs/logical_op_unary"
                },
                "logicalOpBinary": {
                    "type": "object",
                    "$ref": "#/$defs/logical_op_binary"
                },
                "logicalOpNAry": {
                    "type": "object",
                    "$ref": "#/$defs/logical_op_n_ary"
                },
                "unit": {
                    "type": "object",
                    "$ref": "#/$defs/unit"
                },
                "cqp": {
                    "type": "object",
                    "$ref": "#/$defs/cqp"
                },
                "reference": {
                    "type": "string",
                    "$ref": "#/$defs/reference"
                }
            },
            "oneOf": [
                {
                    "required": [
                        "sequence"
                    ]
                },
                {
                    "required": [
                        "set"
                    ]
                },
                {
                    "required": [
                        "group"
                    ]
                },
                {
                    "required": [
                        "universalQuantification"
                    ]
                },
                {
                    "required": [
                        "existentialQuantification"
                    ]
                },
                {
                    "required": [
                        "logicalOpUnary"
                    ]
                },
                {
                    "required": [
                        "logicalOpBinary"
                    ]
                },
                {
                    "required": [
                        "logicalOpNAry"
                    ]
                },
                {
                    "required": [
                        "unit"
                    ]
                },
                {
                    "required": [
                        "cqp"
                    ]
                },
                {
                    "required": [
                        "reference"
                    ]
                }
            ]
        },
        "comparison": {
            "properties": {
                "left": {
                    "type": "object",
                    "$ref": "#/$defs/left"
                },
                "operator": {
                    "type": "string",
                    "$ref": "#/$defs/operator"
                },
                "mathComparison": {
                    "type": "string",
                    "$ref": "#/$defs/math_comparison"
                },
                "stringComparison": {
                    "type": "string",
                    "$ref": "#/$defs/string_comparison"
                },
                "regexComparison": {
                    "type": "string",
                    "$ref": "#/$defs/regex_comparison"
                },
                "entityComparison": {
                    "type": "string",
                    "$ref": "#/$defs/entity_comparison"
                },
                "functionComparison": {
                    "type": "object",
                    "$ref": "#/$defs/function_comparison"
                }
            },
            "oneOf": [
                {
                    "required": [
                        "mathComparison"
                    ]
                },
                {
                    "required": [
                        "stringComparison"
                    ]
                },
                {
                    "required": [
                        "regexComparison"
                    ]
                },
                {
                    "required": [
                        "entityComparison"
                    ]
                },
                {
                    "required": [
                        "functionComparison"
                    ]
                }
            ],
            "required": [
                "left",
                "operator"
            ]
        },
        "left": {
            "properties": {
                "entity": {
                    "type": "string",
                    "$ref": "#/$defs/entity"
                },
                "function": {
                    "type": "object",
                    "$ref": "#/$defs/function"
                }
            },
            "oneOf": [
                {
                    "required": [
                        "entity"
                    ]
                },
                {
                    "required": [
                        "function"
                    ]
                }
            ]
        },
        "constraints": {
            "properties": {
                "comparison": {
                    "type": "object",
                    "$ref": "#/$defs/comparison"
                }
            },
            "oneOf": [
                {
                    "required": [
                        "comparison"
                    ]
                },
                {
                    "type": "object",
                    "$ref": "#/$defs/statement__"
                }
            ]
        },
        "quantor__universal": {
            "type": "string",
            "pattern": "(ALL|!ALL|\u00acALL)"
        },
        "quantor__existential": {
            "type": "string",
            "pattern": "(EXISTS?|[!\u00ac~]EXISTS?|NOT EXISTS?)"
        },
        "operator__unary": {
            "type": "string",
            "pattern": "NOT"
        },
        "operator__binary": {
            "type": "string",
            "pattern": "(NAND|!AND|\u00acAND|NOR|!OR|\u00acOR|XOR|IMPLY|NIMPLY|!IMPLY|\u00acIMPLY)"
        },
        "operator__n_ary": {
            "type": "string",
            "pattern": "(AND|OR)"
        },
        "args__q_one": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/statement__"
            },
            "minItems": 1,
            "maxItems": 1
        },
        "args__q_two": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/statement__"
            },
            "minItems": 2,
            "maxItems": 2
        },
        "args__one": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/constraints"
            },
            "minItems": 1,
            "maxItems": 1
        },
        "args__two": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/constraints"
            },
            "minItems": 2,
            "maxItems": 2
        },
        "args__any": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/constraints"
            },
            "minItems": 1
        },
        "results": {
            "properties": {
                "label": {
                    "type": "string",
                    "$ref": "#/$defs/label__results"
                },
                "resultsPlain": {
                    "type": "object",
                    "$ref": "#/$defs/results_plain"
                },
                "resultsAnalysis": {
                    "type": "object",
                    "$ref": "#/$defs/results_analysis"
                },
                "resultsCollocation": {
                    "type": "object",
                    "$ref": "#/$defs/results_collocation"
                }
            },
            "oneOf": [
                {
                    "required": [
                        "resultsPlain"
                    ]
                },
                {
                    "required": [
                        "resultsAnalysis"
                    ]
                },
                {
                    "required": [
                        "resultsCollocation"
                    ]
                }
            ],
            "required": [
                "label"
            ]
        },
        "results_plain": {
            "properties": {
                "context": {
                    "type": "array",
                    "$ref": "#/$defs/context"
                },
                "entities": {
                    "type": "array",
                    "$ref": "#/$defs/entities"
                }
            },
            "required": [
                "context",
                "entities"
            ]
        },
        "results_analysis": {
            "properties": {
                "attributes": {
                    "type": "array",
                    "$ref": "#/$defs/attributes"
                },
                "functions": {
                    "type": "array",
                    "$ref": "#/$defs/functions"
                },
                "filter": {
                    "type": "object",
                    "$ref": "#/$defs/filter"
                }
            },
            "required": [
                "attributes",
                "functions"
            ]
        },
        "results_collocation": {
            "properties": {
                "center": {
                    "type": "string",
                    "$ref": "#/$defs/center"
                },
                "window": {
                    "type": "string",
                    "$ref": "#/$defs/window"
                },
                "space": {
                    "type": "array",
                    "$ref": "#/$defs/space"
                },
                "attribute": {
                    "type": "string",
                    "$ref": "#/$defs/attribute"
                }
            },
            "oneOf": [
                {
                    "required": [
                        "center",
                        "window"
                    ]
                },
                {
                    "required": [
                        "space"
                    ]
                }
            ],
            "required": [
                "attribute"
            ]
        },
        "context": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/context__"
            },
            "minItems": 1
        },
        "entities": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/entity_ref__"
            },
            "minItems": 1
        },
        "attributes": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/attribute__"
            },
            "minItems": 1
        },
        "filter": {
            "type": "object",
            "$ref": "#/$defs/comparison",
            "required": [
                "comparison"
            ]
        },
        "functions": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/functions__"
            },
            "minItems": 1
        },
        "center": {
            "type": "string",
            "pattern": "[a-z][a-zA-Z0-9_]*"
        },
        "window": {
            "type": "string",
            "pattern": "([-+][0-9]+|0)[.]{2}([-+][0-9]+|0)"
        },
        "space": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/entity_ref__"
            },
            "minItems": 1
        },
        "attribute": {
            "type": "string",
            "pattern": "[^\\n\\r ].*"
        },
        "entity": {
            "oneOf": [
                {
                    "type": "string",
                    "pattern": "[a-z][a-zA-Z0-9_]*"
                },
                {
                    "type": "string",
                    "pattern": "[A-Z_][a-zA-Z0-9_]*"
                },
                {
                    "type": "string",
                    "pattern": "[a-zA-Z_][a-zA-Z0-9_]*\\.[a-zA-Z0-9_]+"
                }
            ],
            "type": "string"
        },
        "operator": {
            "type": "string",
            "pattern": "((not |!)?contain|<(-|\\d+(\\.\\.\\d+)?)?>|>=|<=|<|>|!=|\u00ac=|\u00ac~|~|\u00ac|=|!)"
        },
        "math_comparison": {
            "type": "string",
            "pattern": "-?([0-9]+[.])?[0-9]+[smy]?|[(]*([a-zA-Z][a-zA-Z0-9.]*|-?([0-9]+[.])?[0-9]+[smy]?)(\\s*[*\\/+-]\\s*[(]*([a-zA-Z][a-zA-Z0-9.]*|-?([0-9]+[.])?[0-9]+[smy]?))+[)]*"
        },
        "string_comparison": {
            "type": "string",
            "pattern": "('.+'|\".+\")"
        },
        "regex_comparison": {
            "type": "string",
            "pattern": "\\/.+\\/"
        },
        "entity_comparison": {
            "oneOf": [
                {
                    "type": "string",
                    "pattern": "[a-z][a-zA-Z0-9_]*"
                },
                {
                    "type": "string",
                    "pattern": "[A-Z_][a-zA-Z0-9_]*"
                },
                {
                    "type": "string",
                    "pattern": "[a-zA-Z_][a-zA-Z0-9_]*\\.[a-zA-Z0-9_]+"
                }
            ],
            "type": "string"
        },
        "function_comparison": {
            "type": "object",
            "$ref": "#/$defs/function",
            "required": [
                "function"
            ]
        },
        "label": {
            "type": "string",
            "pattern": "[a-z][a-zA-Z0-9_]*"
        },
        "layer": {
            "type": "string",
            "pattern": "[A-Z_][a-zA-Z0-9_]*"
        },
        "part_of": {
            "type": "string",
            "pattern": "[a-z][a-zA-Z0-9_]*"
        },
        "partition": {
            "type": "string",
            "pattern": "[a-z][a-zA-Z0-9_]*"
        },
        "repetition": {
            "type": "string",
            "pattern": "(\\d+\\.\\.(\\d+|\\*)|[1-9]+\\d*)"
        },
        "label__results": {
            "oneOf": [
                {
                    "type": "string",
                    "pattern": "[a-z][a-zA-Z0-9_]*"
                },
                {
                    "type": "string",
                    "pattern": "[A-Z_][a-zA-Z0-9_]*"
                }
            ],
            "type": "string"
        },
        "entity_ref__": {
            "type": "string",
            "pattern": "[a-z][a-zA-Z0-9_]*"
        },
        "context__": {
            "type": "string",
            "pattern": "[a-z][a-zA-Z0-9_]*"
        },
        "functions__": {
            "type": "string",
            "pattern": "frequency|minimum|maximum|average|stddev"
        },
        "attribute__": {
            "type": "string",
            "pattern": "[^\\n\\r ].*"
        },
        "function": {
            "properties": {
                "functionName": {
                    "type": "string",
                    "$ref": "#/$defs/function_name"
                },
                "arguments": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/arguments"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "functionName",
                "arguments"
            ]
        },
        "function_name": {
            "type": "string",
            "pattern": "length|size|min|max|century|year|month|day"
        },
        "arguments": {
            "properties": {
                "entity": {
                    "type": "string",
                    "$ref": "#/$defs/entity"
                },
                "function": {
                    "type": "object",
                    "$ref": "#/$defs/function"
                },
                "argumentNumber": {
                    "type": "string",
                    "$ref": "#/$defs/argument_number"
                },
                "argumentString": {
                    "type": "string",
                    "$ref": "#/$defs/argument_string"
                }
            },
            "oneOf": [
                {
                    "required": [
                        "entity"
                    ]
                },
                {
                    "required": [
                        "function"
                    ]
                },
                {
                    "required": [
                        "argumentNumber"
                    ]
                },
                {
                    "required": [
                        "argumentString"
                    ]
                }
            ]
        },
        "argument_number": {
            "type": "string",
            "pattern": "-?([0-9]+[.])?[0-9]+[smy]?|[(]*([a-zA-Z][a-zA-Z0-9.]*|-?([0-9]+[.])?[0-9]+[smy]?)(\\s*[*\\/+-]\\s*[(]*([a-zA-Z][a-zA-Z0-9.]*|-?([0-9]+[.])?[0-9]+[smy]?))+[)]*"
        },
        "argument_string": {
            "type": "string",
            "pattern": "('.+'|\".+\")"
